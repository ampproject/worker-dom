{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2017",
      "webworker"
    ],
    "outDir": "../../output",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "main-thread/**/*.ts",
    "node_modules/canvas"
  ]
}
