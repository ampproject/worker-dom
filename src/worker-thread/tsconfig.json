{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2017",
      "webworker"
    ],
    "outDir": "../../output",
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "incremental": true
  },
  "include": [
    "*.ts",
    "**/*.ts",
    "../../third_party/html-parser/*.ts",
  ]
}
